{% extends 'base.html.twig' %}

{% block title %}
	{{ categorie.nom }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{ categorie.nom }}</h1>
		<p>{{ categorie.description }}</p>

		{% if prestataires|length > 0 %}
			<h2>Prestataires proposant ce type de service :</h2>
			<ul class="list-group">
				{% for prestataire in prestataires %}
					<div class="col-md-3 mb-4">
						<div class="card" style="width: 18rem;">
							{% for image in prestataire.images %}
								<img src="{{ asset('uploads/prestataires/mini/300x300-' ~ image.nom) }}" class="card-img-top" alt=""/>
							{% endfor %}
							<div class="card-body">
								<h5 class="card-title">{{ prestataire.nom }}</h5>
								<a href={{path('app_prestataire_detail',{'id': prestataire.id} )}} class="btn btn-primary">Voir plus</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</ul>
		{% else %}
			<div class="alert alert-warning" role="alert">
				Aucun prestataire ne propose de services dans cette cat√©gorie pour le moment.
			</div>
		{% endif %}
	</div>
{% endblock %}
