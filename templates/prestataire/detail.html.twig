{% extends "base.html.twig" %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<img src="[url de la photo du prestataire]" class="img-fluid rounded-circle" alt="Photo du prestataire">
				<h1 class="mt-3">[Nom du prestataire]</h1>
				<p>[Description du prestataire]</p>
				<ul class="list-unstyled">
					<li>
						<i class="fa fa-map-marker mr-2"></i>[Adresse]</li>
					<li>
						<i class="fa fa-envelope mr-2"></i>[Email]</li>
					<li>
						<i class="fa fa-phone mr-2"></i>[Téléphone]</li>
				</ul>
			</div>
			<div class="col-md-8">
				<div class="row">
					<div class="col-md-4">
						<div class="card mb-4">
							<img class="card-img-top" src="[url de l'image de catégorie 1]" alt="Card image cap">
							<div class="card-body">
								<h5 class="card-title">[Catégorie 1]</h5>
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<div class="card mb-4">
							<img class="card-img-top" src="[url de l'image de catégorie 2]" alt="Card image cap">
							<div class="card-body">
								<h5 class="card-title">[Catégorie 2]</h5>
							</div>
						</div>
					</div>
					<div class="col-md-4">
						<div class="card mb-4">
							<img class="card-img-top" src="[url de l'image de catégorie 3]" alt="Card image cap">
							<div class="card-body">
								<h5 class="card-title">[Catégorie 3]</h5>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
